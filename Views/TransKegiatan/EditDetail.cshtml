@model PptkNew.Models.Transaksi.EditDetailVM

<form action="/transaksi/detail/edit" method="post">
    <div class="modal-header">
        @if (Model.TransDetail!.TransDetailId != Guid.Empty) {
            <h4 class="model-title">Edit Transaksi</h4>
        }
        else {
            <h4 class="modal-title">Tambah Transaksi</h4>
        } 
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="TransDetail!.TransDetailId">
        <input type="hidden" asp-for="TransDetail!.TransKegiatanId" />
        <input type="hidden" asp-for="TransDetail!.Anggaran" id="rModalAnggaran" />
        <div class="form-group">
            <label>Rekening</label>
            <select class="form-control" asp-for="TransDetail!.RekeningId" id="sModalRekening">
                @if (Model.NamaRekening != String.Empty)
                {
                    <option value="@Model.TransDetail!.RekeningId" selected="selected">@Model.NamaRekening</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Anggaran</label>
            <input type="text" class="form-control" id="txtModalAnggaran" /> 
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>