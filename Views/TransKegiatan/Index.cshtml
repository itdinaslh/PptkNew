@model PptkNew.Models.Transaksi.IndexVM

@{    
    ViewBag.Title = "Transaksi Kegiatan";
}

@section plugincss {
    <link rel="stylesheet" href="~/lib/sweetalert/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/admin/assets/css/select2.css" />
}

<!--Modal Window-->
<div id='myModal' class='modal fade in' role="dialog" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<!-- Page Header -->
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Transaksi Kegiatan</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">Transaksi</li>
                    <li class="breadcrumb-item">Kegiatan</li>
                </ol>
            </div>
            <div class="col-sm-6">
                <div class="bookmark">
                    <ul>
                        <li>
                            <a href="javascript:void(0)" class="showMe" data-href="/transaksi/master/create" data-container="body" data-bs-toggle="popover" data-placement="top" title="" data-original-title="Add">
                                <i data-feather="plus"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>    
</div>

<div class="container-fluid general-widget">
    <div class="row">
        <div class="col-sm-6 col-xl-3 col-lg-6">
            <div class="card o-hidden border-0">
                <div class="bg-primary b-r-4 card-body">
                    <div class="media static-top-widget">
                        <div class="align-self-center text-center"><i data-feather="database"></i></div>
                        <div class="media-body"><span class="m-0">Total Kegiatan</span>
                            <h4 class="mb-0 counter">@Model.TransKegiatans!.Count()</h4><i class="icon-bg" data-feather="database"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3 col-lg-6">
            <div class="card o-hidden border-0">
                <div class="bg-success b-r-4 card-body">
                    <div class="media static-top-widget">
                        <div class="align-self-center text-center"><i data-feather="book"></i></div>
                        <div class="media-body"><span class="m-0">Total Kontrak</span>
                            <h4 class="mb-0 counter">15</h4><i class="icon-bg" data-feather="book"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3 col-lg-6">
            <div class="card o-hidden border-0">
                <div class="bg-danger b-r-4 card-body">
                    <div class="media static-top-widget">
                        <div class="align-self-center text-center"><i data-feather="book-open"></i></div>
                        <div class="media-body"><span class="m-0">Total Sub Kegiatan</span>
                            <h4 class="mb-0 counter">@Model.TotalSub().ToString()</h4><i class="icon-bg" data-feather="book-open"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3 col-lg-6">
            <div class="card o-hidden border-0">
                <div class="bg-info b-r-4 card-body">
                    <div class="media static-top-widget">                        
                        <div class="media-body" style="padding-left:0;"><span class="m-0">Total Budget</span>
                            <h4 class="mb-0 counter">@Model.SumAnggaran().ToString("#,###")</h4><i class="icon-bg" data-feather="dollar-sign"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sorting Box -->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6 col-xl-3 col-lg-6">
            <form class="theme-form">
                <div class="mb-3 row">
                    <label class="col-sm-3 col-form-label" for="cbTahun">Tahun</label>
                    <div class="col-sm-9">
                        <select id="cbTahun" class="form-control">
                            <option value="2023">2023</option>
                        </select>
                    </div>
                </div>
            </form>            
        </div>
    </div>
</div>

<!-- Table -->
<div class="container-fluid" id="transTable" style="padding-bottom: 50px;">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body" style="padding: 0;">
                    <table class="table table-bordered table-responsive">
                        <thead>
                            <tr>
                                <th class="align-middle text-center">Kode Program</th>
                                <th class="align-middle text-center">Program</th>
                                <th class="align-middle text-center">Kode Kegiatan</th>
                                <th class="align-middle text-center">Kegiatan</th>
                                <th class="align-middle text-center">Kode Sub Kegiatan</th>
                                <th class="align-middle text-center">Sub Kegiatan</th>
                                <th class="align-middle text-center">Kode PASK</th>
                                <th class="align-middle text-center">Penjabaran</th>
                                <th class="align-middle text-center">Anggaran</th>
                                <th class="align-middle text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TransKegiatans!.Count() == 0)
                            {
                                <tr>
                                    <td colspan="10" class="text-center">Tidak Ada Data</td>
                                </tr>
                            } else
                            {
                                @foreach(var p in Model.TransKegiatans!)
                                {
                                    <tr>
                                        <td class="align-middle">@p.Prog.KodeProgram</td>
                                        <td class="align-middle">@p.Prog.NamaProgram</td>
                                        <td class="align-middle">@p.SubKegiatan.Kegiatan.KodeKegiatan</td>
                                        <td class="align-middle">@p.SubKegiatan.Kegiatan.NamaKegiatan</td>
                                        <td class="align-middle">@p.SubKegiatan.KodeSubKegiatan</td>
                                        <td class="align-middle">@p.SubKegiatan.NamaSubKegiatan</td>
                                        <td class="align-middle">@p.KodePASK</td>
                                        <td class="align-middle">@p.Penjabaran</td>
                                        <td class="align-middle text-end">@p.TransDetails.Where(t => t.TransKegiatanId == p.TransKegiatanId).Sum(e => e.Anggaran).ToString("#,###")</td>
                                        <td class="align-middle">
                                            <a asp-controller="TransKegiatan" asp-action="Detail" asp-route-trans="@p.TransKegiatanId" class="btn btn-success" style="width: 100%;">Detail</a>
                                        </td>
                                    </tr>
                                }
                            }                            
                        </tbody>
                    </table>
                </div>
            </div>            
        </div>
    </div>
</div>

@section pluginjs {    
    <script src="~/lib/sweetalert/sweetalert2.all.min.js"></script> 
    <script src="~/admin/assets/js/select2/select2.full.min.js"></script>
}

@section scripts {
    <script src="~/js/modalForm.js"></script>
    <script src="~/pages/transaksi/index.js"></script>
}
